[Unit]
Description=Nomad
Documentation=https://developer.hashicorp.com/nomad/docs
Wants=network-online.target
After=network-online.target
ConditionFileNotEmpty={{ hashi_nomad_config_dir }}/nomad.hcl
{% if hashi_nomad_consul_enabled %}
Wants=consul.service
After=consul.service
{% endif %}

[Service]
EnvironmentFile=-{{ hashi_nomad_config_dir }}/nomad.env
{% if not hashi_nomad_client_enabled %}
User={{ hashi_nomad_user }}
Group={{ hashi_nomad_group }}
{% else %}
User=root
Group=root
{% endif %}
ExecStart=/usr/bin/nomad agent -config {{ hashi_nomad_config_dir }}
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
KillSignal=SIGINT
Restart=on-failure
LimitNOFILE=65536
LimitNPROC=infinity
RestartSec=2
TasksMax=infinity
OOMScoreAdjust=-1000

[Install]
WantedBy=multi-user.target